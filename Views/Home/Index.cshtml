@{
    ViewBag.Title = "Home Page";
}
<script>
    MapPlutoUrl = "@(System.Configuration.ConfigurationManager.AppSettings["MapPlutoUrl"])";
</script>
<div class="row" style="margin:0px; height: 100%">
    <div class="col-md-3" style="height: 100%">
        <form class="form-horizontal">
            <h3>Property Size</h3>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-11">
                    <p id="sliderTotalBuildingFloorArea" style="margin-top: 10px; margin-bottom: 0px; margin-left: -5px;">
                        <label for="cbTotalBuildingFloorArea">
                            <input id="cbTotalBuildingFloorArea" type="checkbox">Total Building Floor Area: 
                            <input type="text" id="txtTotalBuildingFloorArea" readonly style="border:0; color:#f6931f; font-weight:bold; max-width: 100px">
                        </label>
                    </p>
                    <div id="slider-range-TotalBuildingFloorArea"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-11">
                    <p id="sliderCommercialFloorArea" style="margin-top: 10px; margin-bottom: 0px; margin-left: -5px;">
                        <label for="cbCommercialFloorArea">
                            <input id="cbCommercialFloorArea" type="checkbox">Commercial Floor Area:
                            <input type="text" id="txtCommercialFloorArea" readonly style="border:0; color:#f6931f; font-weight:bold; max-width: 100px">
                        </label>
                    </p>
                    <div id="slider-range-CommercialFloorArea"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-11">
                    <p id="sliderResidentialFloorArea" style="margin-top: 10px; margin-bottom: 0px; margin-left: -5px;">
                        <label for="cbResidentialFloorArea">
                            <input id="cbResidentialFloorArea" type="checkbox">Residential Floor Area:
                            <input type="text" id="txtResidentialFloorArea" readonly style="border:0; color:#f6931f; font-weight:bold; max-width: 100px">
                        </label>
                    </p>
                    <div id="slider-range-ResidentialFloorArea"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-11">
                    <p id="sliderNumberOfFloors" style="margin-top: 10px; margin-bottom: 0px; margin-left: -5px;">
                        <label for="cbNumberOfFloors">
                            <input id="cbNumberOfFloors" type="checkbox">Number of Floors:
                            <input type="text" id="txtNumberOfFloors" readonly style="border:0; color:#f6931f; font-weight:bold; max-width: 100px">
                        </label>
                    </p>
                    <div id="slider-range-NumberOfFloors"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-11">
                    <p id="sliderResidentialUnits" style="margin-top: 10px; margin-bottom: 0px; margin-left: -5px;">
                        <label for="cbResidentialUnits">
                            <input id="cbResidentialUnits" type="checkbox">Residential Units:
                            <input type="text" id="txtResidentialUnits" readonly style="border:0; color:#f6931f; font-weight:bold; max-width: 100px">
                        </label>
                    </p>
                    <div id="slider-range-ResidentialUnits"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-11">
                    <button type="button" class="btn btn-primary btn-sm" onclick="btnSearch()">Search</button>
                    <button type="button" class="btn btn-primary btn-sm" onclick="btnReset()">Reset</button>
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 5px;">
                <div class="col-sm-10">
                    <div id="divSelectItemsCount"></div>
                    <div id="divSelectItemsMoreInfo" style="display: none">Select record to zoom on the map</div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <div id="divSelectItemsTable" style="max-height: 304px; overflow: auto;"></div>
                    <div id="divSelectItemsMessage" style="font-size: 14px; color: red; display: none">There are no selected records</div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-9" style="height: 100%; padding-right: 0px">
        <div id="mapDiv" style="height: 100%">
        </div>
    </div>
</div>