<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NYC Mapping Web Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<link rel="stylesheet" href="http://js.arcgis.com/3.31/dijit/themes/claro/claro.css">*@
    <link rel="stylesheet" href="https://js.arcgis.com/3.31/dijit/themes/tundra/tundra.css">

    <link rel="stylesheet" href="http://js.arcgis.com/3.31/esri/css/esri.css">
    <script type="text/javascript">
        var RootUrl = '@Url.Content("~/")';
    </script>
</head>
<body class="tundra">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #33b5e5">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("New York City Real Estate Intelligence", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color: white" })
            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li style="color: #9d9d9d">Hello, @User.Identity.Name @Html.ActionLink("Logout", "Logout", "Account")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        }
                    </ul>*@
            </div>
        </div>
    </div>
    <div style="height: 100%">
        @RenderBody()
    </div>
    <div id="loading" style="display: none">
        <img id="loading-image" src="images/ajax-loader-2.gif" alt="Loading..." />
    </div>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    <script src="http://js.arcgis.com/3.31/"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/customJs")
    @RenderSection("scripts", required: false)
</body>
</html>
